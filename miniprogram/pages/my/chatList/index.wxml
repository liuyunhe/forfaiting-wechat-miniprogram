    lower-threshold="50"
    scroll-top="0"
    scroll-left="0"
    scroll-into-view=""
    scroll-with-animation="false"
    enable-back-to-top="false"
    bindscrolltoupper=""
    bindscrolltolower=""
    bindscroll=""
  >
    <view class="chat-list-item">
      <view class="left">
        <image
          class="head-avtar"
          src="../../../assets/images/head-avtar.png"
          mode="widthFix"
