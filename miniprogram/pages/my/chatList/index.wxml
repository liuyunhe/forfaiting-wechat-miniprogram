          mode="widthFix"
          lazy-load="true"
        >
          <view class="new-message-point"> </view>
        </image>
      </view>
      <view class="right">
        <view class="person-info">
          <view class="name"> 陈晓 </view>
          <view class="bank"> 桂林银行南宁分行 </view>
